<div class="row">
  <div class="col-sm-6">
    <h1>Sign up</h1>

    <%= form_for(
      resource,
      :as => resource_name,
      :url => registration_path(resource_name),
      :html => { :role => "form" }
    ) do |f| %>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :first_name, class: 'required' %><br />
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: 'required' %><br />
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="robot">
      <p><em>Answer the following question, to prove you're not a robot.</em></p>
      <%= textcaptcha_fields(f) do %>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-6">
                <%= f.label :textcaptcha_answer, resource.textcaptcha_question %><br/>
                <%= f.text_field :textcaptcha_answer, :value => '', class: "form-control"%>
            </div>
          </div>
        </div>
      <% end %>
      </div>

      <div class="form-group" style="background-color: #fefefe;">
        <div class="row">
          <div class="col-sm-6">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
