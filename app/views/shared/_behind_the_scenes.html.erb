<% else %>
  <% if style == "overview" %>
    <table>
      <tr>
      <td>
      	<%= link_to image_tag(post.photos[0].image.variant(resize: "340x227^", crop: "340x227+0+0")),
                    post_pages_path(post) %>
      </td>
       <td>
        <%= link_to image_tag(post.photos[1].image.variant(resize: "340x227^", crop: "340x227+0+0")),
                    post_pages_path(post) %>
      </td>
       <td>
      	<%= link_to image_tag(post.photos[2].image.variant(resize: "340x227^", crop: "340x227+0+0")),
                    post_pages_path(post) %>
      </td>
     </tr>
     <tr>
      <td>
      	<%= link_to image_tag(post.photos[3].image.variant(resize: "340x227^", crop: "340x227+0+0")),
