<% if style == "overview" %>
  <table>
    <tr>
    <td>
    	<%= link_to image_tag(publication.photos[0].image(:compo)), 
                  behind_publication_path(publication) %>
    </td>
     <td>
      <%= link_to image_tag(publication.photos[1].image(:compo)), 
                  behind_publication_path(publication) %>
    </td>
     <td>
    	<%= link_to image_tag(publication.photos[2].image(:compo)), 
                  behind_publication_path(publication) %>
    </td>
   </tr>
   <tr>
    <td>
    	<%= link_to image_tag(publication.photos[3].image(:compo)), 
                  behind_publication_path(publication) %>
    </td>
     <td>
    	<%= link_to image_tag(publication.photos[4].image(:compo)), 
                  behind_publication_path(publication) %>
    </td>
     <td>
    	<%= link_to image_tag(publication.photos[5].image(:compo)), 
                  behind_publication_path(publication) %>
    </td>
   	</tr>
   </table>
<% elsif style == "full" %>
  <% publication.photos.each do |photo| %>
    <%= link_to image_tag(photo.image(:large)), 
                  photo_path(photo) %>
    <h4>
      <%= photo.description %><br> 
      <small>(C) <%= photo.credit %> </small>
    </h4>
    <hr>
  <% end %>
<% end %>