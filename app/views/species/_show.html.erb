<%= render partial: "layouts/page_title",
           locals: {
             title: title,
       	     subtitle: subtitle,
             backlink: species_index_path
           } %>

<div class="row">
  <div class="col-sm-7">

    <div class="panel panel-default">
      <div class="panel-body">
	    	<h2><i><%= object.name %></i></h2>
			</div>
		</div>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= paginate publications %>[<%= publications.total_count %> results] &bullet; <%= link_to "Download as CSV", summary_path(title.downcase, object.id, format: :csv) %>
        <br><br>

	      <table class="table table-striped">
          <%= render partial: 'species/publication', collection: publications, locals: { object: object } %>
				</table>
        <%= paginate publications %>[<%= publications.total_count %> results] &bullet; <%= link_to "Download as CSV", summary_path(title.downcase, object.id, format: :csv) %>
			</div>
		</div>
	</div>

  <div class="col-sm-5">
    <div class="panel panel-default">
      <div class="panel-heading" align=center">
        <%= render_async species_image_path(id: object.id) %>
			</div>
		</div>

  </div>
</div>
