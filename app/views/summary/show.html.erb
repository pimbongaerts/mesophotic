<% title = @object.class.name.pluralize %>
<% subtitle = @object.description %>
<% show = (lookup_context.template_exists? "show", title.downcase, true) ? "#{title.downcase}/show" : "show" %>
<%= render partial: show,
           locals: {
             title: title,
             subtitle: subtitle,
             object: @object,
             objects: @objects,
             publications: @publications,
             all: @all_publications
           } %>
