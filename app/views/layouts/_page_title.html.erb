<div class="row">
  <% if defined?(title) && defined?(subtitle) %>
    <% title("#{title}: #{subtitle}") %>
  <% else %>
    <% title("#{title}") %>
  <% end %>
</div>

<div class="row">
  <div class="col-xs-10">
    <h3 class="page-title">
      <%= title %>:
      <% if defined?(subtitle) %>
      <br><small><%= subtitle %></small>
      <% end %>
    </h3>
  </div>
  <div class="col-xs-2">
    <% if backlink %>
      <h3 class="page-title" align="right">
        <small><%= link_to '<<< back', backlink %></small>
      </h3>
    <% end %>
  </div>
</div>
<hr>
