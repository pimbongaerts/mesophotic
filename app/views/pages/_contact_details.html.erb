<% if @user.department %>
  <%= @user.department %><br>
<% end %>
<% if @user.organisation %>
  <%= @user.organisation.name %>&nbsp;
  (<%= ISO3166::Country[@user.organisation.country] %>)<br>
<% end %>
<% if @user.other_organizations %>
  &&nbsp;
  <%= @user.other_organizations %><br>
<% end %>
<% if @user.address %>
  <br>
  <%= @user.address %><br>
<% end %>
<% if !@user.phone.blank? %>
  <i class="bi bi-phone-fill" aria-hidden="true"></i>
  &nbsp;<%= @user.phone %><br>
<% end %>
